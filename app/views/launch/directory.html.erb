<section class="site-section-top">
  <div class="bg-img" style="background-image: url('/assets/img/presidentsmansion01_1920.jpg');">
    <div class="container site-content">
      <div class="site-heading-bg-primary">
        <h1>Manderson Student Directory</h1>
      </div> <!-- .site-heading-bg -->
    </div> <!-- .container -->
  </div> <!-- .site-section-bg -->
</section>

<section class="site-content">
  <div class="container">
    <div class="row">
    Sort by:  <%= link_to 'All', launch_directory_path %> | <%= link_to 'MBA', launch_directory_path(:candidate_type=>0) %> | <%= link_to 'STEM Path to the MBA', launch_directory_path(:candidate_type=>1) %>
    </div>
    <div class="row">

      <% @profiles.each do |profile| %>
        <div class="col-md-3">
          <div class="content-box box-img bg-light text-center">

            <% if profile.manderson_profile_photo? %>
                    <%= image_tag profile.manderson_profile_photo.directory, class:'img-responsive thumbnail', size: '263x263' %>
                <% else %>
                    <%= image_tag('/assets/no-pic.png', class: 'img-responsive thumbnail', size: '263x263', alt: 'The University of Alabama') %>
                <% end %>

            <div class="box-body">
              <h3 class="no-bottom-spacing"><%= profile.first_name %>  <%= profile.last_name %></h3>
              <small><%= profile.grad_class %> / <%= profile.candidate_type %></small>

              <div class="divider-light faded-both"></div>

              <p class="small"> <a href="<%= manderson_profile_path(profile) %>" class="btn btn-transparent-v2"> View Profile</a></p>
            </div> <!-- .box-body -->
          </div> <!-- .content-box -->
        </div> <!-- .col-md-3 -->
      <% end %>

    </div> <!-- .row -->
  </div> <!-- .container -->
</section>

