<p id="notice"><%= notice %></p>

<h1>Listing Degrees</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Unit type</th>
      <th>Degree category</th>
      <th>Degree name</th>
      <th>Short desc</th>
      <th>Desc</th>
      <th>Course assigned</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @degrees.each do |degree| %>
      <tr>
        <td><%= degree.unit_type.name %></td>
        <td><%= degree.degree_category.name %></td>
        <td><%= degree.name %></td>
        <td><%= degree.short_desc %></td>
        <td><%= degree.desc %></td>
        <td><%= degree.course_assigned %></td>
        <td><%= degree.status %></td>
        <td><%= link_to 'Show', degree %></td>
        <td><%= link_to 'Edit', edit_degree_path(degree) %></td>
        <td><%= link_to 'Destroy', degree, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

