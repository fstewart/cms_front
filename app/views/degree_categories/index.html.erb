<p id="notice"><%= notice %></p>

<h1>Listing Degree Categories</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Department</th>
      <th>Name</th>
      <th>Desc</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @degree_categories.each do |degree_category| %>
      <tr>
        <td><%= degree_category.department.name %></td>
        <td><%= degree_category.name %></td>
        <td><%= degree_category.desc %></td>
        <td><%= degree_category.status %></td>
        <td><%= link_to 'Show', degree_category %></td>
        <td><%= link_to 'Edit', edit_degree_category_path(degree_category) %></td>
        <td><%= link_to 'Destroy', degree_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

