<section class="site-section-top">
  <div class="bg-img" style="background-image: url('/assets/img/presidentsmansion01_1920.jpg');">
    <div class="container site-content">
      <div class="site-heading-bg-primary">
        <h1>Manderson Student Profiles</h1>
      </div> <!-- .site-heading-bg -->
    </div> <!-- .container -->
  </div> <!-- .site-section-bg -->
</section>

<section class="site-content">
  <div class="container">
    <div class="row">
      <h1>Manderson Student Profiles</h1>
    </div>
    <div class="row">

      <% @profiles.each do |profile| %>

          <div class="col-md-3">
            <div class="content-box box-img bg-light text-center">

              <% if profile.manderson_profile_photo? %>
                  <%= image_tag profile.manderson_profile_photo.resized, class:'img-responsive', size: '263x263' %>
              <% else %>
                  <%= image_tag('ua-square-logo.png', class: 'ua-square-logo pull-left img-responsive', size: '65x65', alt: 'The University of Alabama') %>
              <% end %>

              <div class="box-body">
                <h3 class="no-bottom-spacing"><%= profile.first_name %> <%= profile.last_name %></h3>
                <small><%= profile.grad_class %> / <%= profile.candidate_type %></small>

                <div class="divider-light faded-both"></div>

                <p class="small"><%# link_to 'View Full Profile', profile %></p>
              </div> <!-- .box-body -->
            </div> <!-- .content-box -->
          </div> <!-- .col-md-3 -->

      <% end %>

    </div>
  </div>
</section>