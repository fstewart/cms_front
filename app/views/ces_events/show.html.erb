<section class="site-content">
  <div class="container">
    <div class="row">
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Title:</strong>
        <%= @ces_event.title %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @ces_event.description %>
      </p>

      <p>
        <strong>CES Event Flyer:</strong>
        <% if @ces_event.ces_promo? %>
            <%= image_tag @ces_event.ces_promo.url %>
        <% else %>
            NA
        <% end %>
      </p>

      <%= link_to 'Edit', edit_ces_event_path(@ces_event) %> |
      <%= link_to 'Back', ces_events_path %>

    </div> <!-- .col-md-3 -->
  </div> <!-- .row -->
</section> <!-- .container -->