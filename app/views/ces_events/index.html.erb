<section class="site-content">
  <div class="container">
    <div class="row">

      <p id="notice"><%= notice %></p>

      <h1>CES Events</h1>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Flyer</th>
            <th>Reservations?</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @ces_events.each do |ces_event| %>
            <tr>
              <td><%= ces_event.title %></td>
              <td><%= ces_event.description %></td>
              <td>
                <% if ces_event.ces_promo? %>
                    <%= image_tag ces_event.ces_promo.thumb.url %>
                <% else %>
                    NA
                <% end %>
              </td>
              <td>
                 If Yes, then link to the reservations
              </td>
              <td><%= link_to 'Show', ces_event %></td>
              <td><%= link_to 'Edit', edit_ces_event_path(ces_event) %></td>
              <td><%= link_to 'Destroy', ces_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New CES Event', new_ces_event_path %>

    </div> <!-- .col-md-3 -->
  </div> <!-- .row -->
</section> <!-- .container -->