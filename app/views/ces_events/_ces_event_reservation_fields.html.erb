<div class="nested-fields well well-compact">
  <div class="form-inline">
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Reservation Option</th>
        <th>Number of Tickets</th>
        <th>Number of tickets</th>
        <th>Number of Tickets</th>
        <th>Remove</th>
      </tr>
      </thead>
      <tbody>
        <td>
          <%= f.input :title, :label => 'Option / Event'  %>
        </td>
        <td>
          <%= f.input :comp_tickets, :label => 'Complimentary Tickets'  %>
        </td>
        <td>
          <%= f.input :paid_adult_tickets, :label => 'Paid Adults'  %>
        </td>
        <td>
          <%= f.input :paid_child_tickets, :label => 'Paid Children'  %>
        </td>
        <td>
          <%= link_to_remove_association '<button type="button" class="btn btn-primary">Remove</button>'.html_safe, f, data: {:confirm => 'do you really want to do this?'} %>
        </td>
      </tbody>
    </table>
  </div>
</div>

