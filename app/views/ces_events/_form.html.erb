<%= simple_form_for(@ces_event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :ces_promo, label: 'Event Flyer or Image' %>
  </div>

  <div class="row col-md-12">
    <br>
    <h3>Reservation Options</h3>
    <div id="tasks">
      <%= f.simple_fields_for :ces_event_reservations do |button| %>
          <%= render 'ces_event_reservation_fields', :f => button %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'Add Event Reservation Details', f, :ces_event_reservations %>
      </div>
      <br>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
