<p id="notice"><%= notice %></p>

<h1>Listing Lift Instructors</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Lift course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lift_instructors.each do |lift_instructor| %>
      <tr>
        <td><%= lift_instructor.name %></td>
        <td><%= lift_instructor.email %></td>
        <td><%= lift_instructor.phone %></td>
        <td><%= lift_instructor.lift_course_id %></td>
        <td><%= link_to 'Register to teach this Course', lift_instructor %> </td>
        <td><%= link_to 'Show', lift_instructor %></td>
        <td><%= link_to 'Edit', edit_lift_instructor_path(lift_instructor) %></td>
        <td><%= link_to 'Destroy', lift_instructor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

