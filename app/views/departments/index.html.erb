<section class="site-content">
		<div class="container">
			<div class="row">
        <div class="col-md-9">
				

					<p id="notice"><%= notice %></p>
					
					<h3>Departments</h3>

          <div class="col-md-12">
            <table class="table table-bordered table-striped datatable dataTable with-footer">
					  <thead>
					    <tr>
                <th>Type</th>
					      <th>Name</th>
					      <th>URL</th>
					      <th>Pages</th>
					      <th colspan="3">Actions</th>
					    </tr>
					  </thead>
					
					  <tbody>
					    <% @departments.each do |department| %>
					      <tr>
                  <td><%= department.unit_type.name %></td>
					        <td><%= department.name %></td>
					        <td><%= department.slug %></td>
					        <td style="text-align:center;">

                  </td>
					        <td></td>
					        <td><%= link_to 'Edit', edit_department_path(department) %></td>
					        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					      </tr>

					    <% end %>
					  </tbody>
					</table>
          </div>
					
					<p></p>

          <%= link_to new_department_path, class: "btn btn-success btn-sm btn-icon icon-left" do %>
              <i class="entypo-plus"></i>New Department
          <% end %>

      </div>
    </div>
  </div> <!-- .row -->
</section> <!-- .container -->
