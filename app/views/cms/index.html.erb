<section class="site-content">
  <div class="container">
    <div class="row">

      <p id="notice"><%= notice %></p>

      <h1>Web Pages</h1>
      <%# render 'searchform' %>
      <table class="table table-striped">
        <thead>
        <tr>
          <th></th>
          <th>Department</th>
          <th>Title</th>
          <th>Preview Link</th>
          <th>Published Date</th>
          <th>Status</th>
          <th>Sections</th>
          <th colspan="3">Actions</th>
        </tr>
        </thead>

        <tbody>
        <% @pages.each do |page| %>
            <tr>
              <td><%# page.parent_id %></td>
              <td><%# @org.name %></td>
              <td><%= page.title %></td>
              <td><%# link_to page.department.slug, page_path(page.department.slug) %></td>
              <td><%= page.updated_at %></td>
              <td><%= page.status %></td>
              <td style="text-align:center;">

              </td>
              <td><%# link_to( 'Add a Section', {:controller => 'sections', :action => 'new', :page_id => page.id, @id => @org.id} ) %></td>
              <td><%# link_to 'Edit Page Details', edit_cms_path(page)  %>
                <%# link_to( 'Edit Page Details', {:controller => 'pages', :action => 'edit', :page_id => page.id, @id => @org.id} )  %>
              </td>
              <td><%# link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <% if @pages.present? %>
          <%= render @pages %>
      <% else %>
          <p>There are no pages containing the term(s) <%= params[:search] %>.</p>
      <% end %>

      <hr>

      <br>

      <%# link_to('Add A New Page',{:controller => 'pages', :action => 'new', @id => @org.id}) %>

    </div>
  </div>
</section>