<section class="site-content">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        
        <%= simple_form_for @applicant, :html => {:class => 'form-horizontal' } do |f| %>
          <%= f.input :name, :required => true %>
          <%= f.input :email, :required => true %>
          <%= f.input :strengths, :as => :text, :required => true %>
          <div>
            </br>
            <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>