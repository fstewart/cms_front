<%= simple_form_for(@graduate_profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :middle_initial %>
    <%= f.input :last_name %>
    <%= f.input :nickname %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :hometown %>
    <%= f.input :candidate_type %>
    <%= f.input :class %>
    <%= f.input :ug_school %>
    <%= f.input :ug_year %>
    <%= f.input :work_experience %>
    <%= f.input :activities_honors %>
    <%= f.input :internship %>
    <%= f.input :cskills %>
    <%= f.input :avatar %>
    <%= f.input :cv %>
    <p><%= f.input :status %></p>
    <p><%= f.input :registered %></p>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
