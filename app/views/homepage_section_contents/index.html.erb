<p id="notice"><%= notice %></p>

<h1>Listing Homepage Section Contents</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Priority</th>
      <th>Title</th>
      <th>Body</th>
      <th>Background Option</th>
      <th>Background Image</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @homepage_section_contents.each do |homepage_section_content| %>
      <tr>
        <td><%= homepage_section_content.priority %></td>
        <td><%= homepage_section_content.title %></td>
        <td><%= raw homepage_section_content.body.truncate(100) %></td>
        <td><%= homepage_section_content.background_option%></td>
        <td></td>
        <td><%= homepage_section_content.is_published %></td>
        <td><%= link_to 'Edit', edit_homepage_section_content_path(homepage_section_content) %></td>
        <td><%= link_to 'Destroy', homepage_section_content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

