<section class="site-content">
		<div class="container">
			<div class="row">
				<p id="notice"><%= notice %></p>
				<div class="col-md-9">

					<h1 class="page-header">Department Types</h1>
					From Departments to Annual Events, this is where each type of organization is created.
						<p id="notice"><%= notice %></p>
								
						<table class="table table-striped">
						  <thead>
						    <tr>
                  <th>ID</th>
						      <th>Name</th>
						      <th>URL</th>
						      <th colspan="3">Actions</th>
						    </tr>
						  </thead>
						
						  <tbody>
						    <% @unit_types.each do |unit_type| %>
						      <tr>
                    <td><%= unit_type.id %></td>
						        <td><%= unit_type.name %></td>
						        <td><%= unit_type.url %></td>
						        <td><%= link_to 'Show', unit_type %></td>
						        <td><%= link_to 'Edit', edit_unit_type_path(unit_type) %></td>
						        <td><%= link_to 'Destroy', unit_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
						      </tr>
						    <% end %>
						  </tbody>
						</table>
						
						<br>
						
						<%= link_to 'Create a new department type', new_unit_type_path %> | 
						<%= link_to 'Create a new department', new_department_path %>

				</div><!-- .col-md-9 -->
			</div> <!-- .row -->
		</div> <!-- .container -->
</section> 
