<%= simple_form_for @homepage_carousel, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :priority %>
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.input :image %>
    <%= f.input :url %>
    <%= f.input :video %>
    <%= f.input :is_published %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
