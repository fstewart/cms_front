<p id="notice"><%= notice %></p>

<h1>Listing Lift Locations</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Map url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lift_locations.each do |lift_location| %>
      <tr>
        <td><%= lift_location.name %></td>
        <td><%= lift_location.address %></td>
        <td><%= lift_location.map_url %></td>
        <td><%= link_to 'Show', lift_location %></td>
        <td><%= link_to 'Edit', edit_lift_location_path(lift_location) %></td>
        <td><%= link_to 'Destroy', lift_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

