<p id="notice"><%= notice %></p>

<h1>Listing Faqs</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Department</th>
      <th>Title</th>
      <th>Desc</th>
      <th>Status</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @faqs.each do |faq| %>
      <tr>
        <td><%= faq.department %></td>
        <td><%= faq.title %></td>
        <td><%= faq.desc %></td>
        <td><%= faq.status %></td>
        <td><%= faq.priority %></td>
        <td><%= link_to 'Show', faq %></td>
        <td><%= link_to 'Edit', edit_faq_path(faq) %></td>
        <td><%= link_to 'Destroy', faq, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

