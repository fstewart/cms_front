<p id="notice"><%= notice %></p>

<h1>Outreach and Research Centers</h1>

<table class="table table-bordered table-striped datatable dataTable no-footer">
  <thead>
    <tr>
      <th>Name</th>
      <th>Building</th>
      <th>Phone</th>
      <th>Office</th>
      <th>Mailing Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @centers.each do |center| %>
      <tr>
        <td><%= center.name %></td>
        <td><%= center.building_id.name %></td>
        <td><%= center.phone %></td>
        <td><%= center.office %></td>
        <td><%= center.mailing_address %></td>
        <td><%= link_to 'Show', center %></td>
        <td><%= link_to 'Edit', edit_center_path(center) %></td>
        <td><%= link_to 'Destroy', center, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

