<% @page_title = "Sections" %>
<p id="notice"><%= notice %></p>



<h1><%= @page.title %> Sections </h1>


<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Page</th>
      <th>Position</th>
      <th>Title</th>
      <th>Status</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.page.title %></td>
        <td><%= section.position %></td>
        <td><%= section.title %></td>
        <td><%= section.status %></td>
        <td><%# link_to 'Show', {:action => 'show_old', :id => section.id, :page_id =>@page.id} %></td>
        <td><%= link_to 'Edit', {:action => 'edit', :id => section.id, :page_id =>@page.id} %></td>
        <td><%= link_to 'Destroy',{:action => 'destroy', :id => section.id, :page_id => @page.id}, method: :delete, data: { confirm: 'Are you sure?' } %>
        <%# link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

