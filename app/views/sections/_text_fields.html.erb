<div class="nested-fields well well-compact col-md-12">
  <h4 style="text-align:center;">Text Field Details</h4>
  <div class="col-md-12">
    <div class="form-inline" style="width: 75%;margin: 0 auto;">
    <p><%# f.input :position, :label => 'Order'  %></p>
    <p><%= f.input :title  %></p>
    <p><%= f.input :body, label: false, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Super'} }, :wrapper => :vertical_form %></p>
    <p><%= f.input :status, :label => 'Status'  %></p>
    <%= link_to_remove_association f, data: {:confirm => 'do you really want to do this?'}, class: 'btn btn-default btn-xs' do %>
        <p>Remove Text Item</p>
    <% end %>
    </div>
  </div>

</div>