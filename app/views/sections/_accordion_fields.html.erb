<div class="nested-fields well well-compact">
  <h4 style="text-align:center;">Accordion Item <%= f.object.priority %> of <%= @section.total_accordions %></h4>
  <div class="col-md-12">
    <div class="form-inline" style="width: 100%;margin: 0 auto;">
    <%= f.input :priority, :label => 'Order'  %>
    <%= f.input :title  %><br><br>
    <%= f.input :desc, label: false,:as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'MyToolbar'} }, :wrapper => :vertical_form  %><br><br>
    <%= f.input :status, :label => 'Accordion Status'  %><br><br>
    <%= link_to_remove_association f, data: {:confirm => 'do you really want to do this?'}, class: 'btn btn-default btn-xs' do %>
        <p>Remove Accordion Item</p>
    <% end %>
    </div>
  </div>
</div>