<p id="notice"><%= notice %></p>

<h1>Section Background Options</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Option</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @background_options.each do |background_option| %>
      <tr>
        <td><%= background_option.option %></td>
        <td></td>
        <td><%= link_to 'Edit', edit_background_option_path(background_option) %></td>
        <td><%= link_to 'Destroy', background_option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

