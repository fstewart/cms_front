                                <p>Et harum quidem rerum facilis est et expedita distinctio lorem ipsum dolor sit amet.</p>
                                <a href="#" class="btn btn-default btn-sm">Read More <i class="fa fa-arrow-right"></i></a>
                              </div> <!-- .box-body -->
                            </div> <!-- .box-img -->
                          </div>

                      <% end %>

                    </div>

                <% end %>

                <% unless section.iconboxes.blank? %>

                    <div class="row">

                      <% section.iconboxes.each do |i| %>

                        <div class="col-md-4 col-sm-6">
                          <div class="content-box text-center bg-light box-bordered box-clickable">
                            <i class="fa fa-cog icon-bg icon-primary icon-lg circle"></i>
                            <h3><a href="#">Clickable Icon Box Link 1</a></h3>
                            <p>Et harum quidem rerum facilis est et expedita distinctio lorem ipsum dolor sit amet.</p>
                          </div> <!-- .box-bordered -->
                        </div>

                      <% end %>

                    </div>

                <% end %>



                <% unless section.listgroups.blank? %>

                    <ul class="list-group">

                      <% section.listgroups.each do |listgroup| %>

                          <li class="list-group-item">
                            <h4 class="list-group-heading">
                              <%= listgroup.title %>
                            </h4>
                            <%= raw(listgroup.desc) %>
                          </li>

                      <% end %>

                    </ul>

                <% end %>

            <% end %>

        <% end %>

      </div> <!-- .col-md-9 -->
    </div> <!-- .row -->
  </div> <!-- .container -->
</section>