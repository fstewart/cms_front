                    <ul class="list-group">

                      <% section.listgroups.each do |listgroup| %>

                          <li class="list-group-item">
                            <h4 class="list-group-heading">
                              <%= listgroup.title %>
                            </h4>
                            <%= raw(listgroup.desc) %>
                          </li>

                      <% end %>

                    </ul>

                <% end %>

            <% else %>

                <h2 id="<%= "item-#{indexplusone}" %>" class="page-header"> <%= section.title %> </h2>

                <% unless section.texts.blank? %>

