                            <div id="collapse-1" class="panel-collapse collapse in">
                              <div class="panel-body">
                                <%= raw(accordion.desc) %>
                              </div> <!-- .panel-body -->
                            </div> <!-- #collapse-1 -->
                          </div> <!-- .panel -->
                        </div>

                    <% end %>

                <% end %>

                <% unless section.carousels.blank? %>

                    <% section.carousels.each do |slide| %>

                        <div id="carousel-owl-<%= slide.slide_priority %>" class="owl-carousel owl-theme owl-loaded">
                          <div class="owl-stage-outer" style="padding-left: 0px; padding-right: 0px;">
