<p id="notice"><%= notice %></p>

<h1>Listing Layers</h1>

<table>
  <thead>
    <tr>
      <th>Page</th>
      <th>Title</th>
      <th>Position</th>
      <th>Desc</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @layers.each do |layer| %>
      <tr>
        <td><%= layer.page %></td>
        <td><%= layer.title %></td>
        <td><%= layer.position %></td>
        <td><%= layer.desc %></td>
        <td><%= layer.status %></td>
        <td><%= link_to 'Show', layer %></td>
        <td><%= link_to 'Edit', edit_layer_path(layer) %></td>
        <td><%= link_to 'Destroy', layer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

